/* pages/date/date.wxss */
page{
 color: black;
}
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    /* padding-top: 60px; */
    text-align: center;
}
.weui-tab__content .main{
  height: 200px;
}
.weui-tab__content .main text{
  display: block;
}
.main .name,.name{
  font-weight: 800;padding: 3rem 0 0.5rem 0;font-size: 15px;
}
.main .tongyi,.tongyi{
  padding: 0 0 0.8rem 0;font-size: 12px;
}
.main .sub,.sub{
  font-weight: 700;padding: 0 0 1rem 0;font-size: 24px;
  font-family: 'Times New Roman', Times, serif;
}
.main .date,.date{
  padding: 0 0 1rem 0;font-size: 12px;
}
button{
  margin: 0 2rem;
}

.body{
 margin: 1rem 0.8rem; border-radius: 10px;border:1px solid turquoise;
 display: flex;direction: row;height: 120px;position: relative;
}
.body image{
  width: 30%;height: 100%;position: absolute;border-radius: 10px 0  0 10px ;
}
.body .right{
  position: absolute;left: 35%;width: 65%;height: 100%;
}
.right text{
  display: block;font-weight: 400;
}
.right .name{
 padding: 0.2rem 0;
}
.right .tongyi{
  padding: 0 0 0.3rem 0;
}
.right .sub{
  padding: 0 0 0.3rem 0;
}
.right .date{
  padding: 0 0 0.3rem 0;
}