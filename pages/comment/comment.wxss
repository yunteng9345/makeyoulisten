/* pages/comment/comment.wxss */
page{
  background-color:black;
}
/*评论页面对应主题的渲染*/
.li{
  padding:0.5rem 0; background:#FFA500; margin:0.5rem 1rem 0.3rem 1rem;
  border: 2px solid saddlebrown; border-radius: 10px;
} 
.contents .topic{
  display: block; width:100%;  color:black; font-size: 20px;
}

/*显示对应主题总评论*/
.total{
   margin: 0.3rem 1rem 0.5rem  1rem; font-family: sans-serif;font-size: 18px;
   color:#fff;
}

.dibu{
  margin-bottom: 30px;
}


.up{
  background-size: 100% auto; 
background-repeat: no-repeat; 

}
/*评论部分的样式*/
.commment{
  
  border: 2px solid #FFA500; border-radius: 5px;
  margin:  0  1rem;
     background-image: url(https://www.yunteng0923.cn/MakeYouListen/voices/bj3.png);
     background-size:100% 100%;
     margin-bottom: 40px;
  
}
/*头像 昵称 时间 地点样式*/
.up image{
  width: 50px;height: 50px;border-radius:50%; margin:5px;float: left;
}
.nickname,.time,.address{
  display:block; margin:0.2rem 0; 
}

.time{
  font-size: 15px;color:grey;
}
/*录音 评论 点赞样式*/
.down image{
  width: 150px;height: 30px;margin-left: 10px;border-radius: 20px;
}
.down button{
  margin-left: 10px;
}

/* 
底部固定发送消息
 */
.dialog{
   display: flex;direction: column;height: 40px;
   position: fixed;bottom: 0;width: 100%;background: #FFA500;
}
.dialog image{
   position: absolute;bottom: 0;left: 3%;width: 10%;height:30px;
}
.record{
 position: absolute;bottom: 0;left: 16%;width: 55%;height:30px;line-height: 30px;
}
.dialog input{
  border:1px solid gray;
}
.submit{
 position: absolute;bottom: 0;left: 75%;width: 25%;height:30px;line-height: 30px;
}

