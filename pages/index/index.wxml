 <swiper indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class='swiper'>
      <block wx:for="{{swiperList}}" wx:key>
        <swiper-item>
          <image src="{{item.url}}" class="slide-image" height="200" width="100%"/>
        </swiper-item>
      </block>
    </swiper>
